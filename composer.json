{
    "name": "ease-invoice/app",
    "description": "Easy Invoice Management System",
    "type": "project",
    "require": {
        "php": "^8.1|^8.2",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "php/"
        },
        "files": [
            "php/config.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}